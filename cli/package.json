{
    "name": "production-backend-kit",
    "version": "0.1.0",
    "description": "Production-grade backend engineering patterns, checklists & AI adapters",
    "type": "module",
    "bin": {
        "bek": "./dist/index.js"
    },
    "main": "./dist/index.js",
    "scripts": {
        "build": "tsc",
        "dev": "tsc --watch",
        "start": "node dist/index.js",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "lint": "eslint src --ext .ts",
        "lint:fix": "eslint src --ext .ts --fix",
        "typecheck": "tsc --noEmit",
        "format": "prettier --write src/**/*.ts",
        "build:db": "node dist/index.js build-db",
        "validate": "node dist/index.js validate",
        "doctor": "node dist/index.js doctor",
        "audit": "npm audit",
        "audit:fix": "npm audit fix",
        "prepare": "npm run build",
        "prepublishOnly": "npm run build && npm run test"
    },
    "keywords": [
        "backend",
        "patterns",
        "checklists",
        "api-design",
        "production",
        "engineering",
        "cli",
        "best-practices",
        "ai-tools"
    ],
    "author": "ThanhNguyxn",
    "license": "MIT",
    "homepage": "https://github.com/ThanhNguyxn/backend-engineering-kit#readme",
    "bugs": {
        "url": "https://github.com/ThanhNguyxn/backend-engineering-kit/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ThanhNguyxn/backend-engineering-kit.git"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "files": [
        "dist",
        "README.md"
    ],
    "dependencies": {
        "chalk": "^5.3.0",
        "commander": "^14.0.2",
        "fast-glob": "^3.3.2",
        "gray-matter": "^4.0.3",
        "minisearch": "^7.1.0"
    },
    "devDependencies": {
        "@types/node": "^25.0.9",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@typescript-eslint/parser": "^8.53.0",
        "eslint": "^8.57.0",
        "execa": "^9.6.1",
        "prettier": "^3.8.0",
        "typescript": "^5.3.3",
        "vitest": "^1.2.2"
    }
}
