{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://backend-kit.dev/schemas/registry.schema.json",
    "title": "Template Registry",
    "type": "object",
    "required": [
        "apiVersion",
        "kind",
        "metadata",
        "templates"
    ],
    "additionalProperties": false,
    "properties": {
        "apiVersion": {
            "type": "string",
            "const": "templates/v2"
        },
        "kind": {
            "type": "string",
            "const": "Registry"
        },
        "metadata": {
            "type": "object",
            "required": [
                "name",
                "version"
            ],
            "properties": {
                "name": {
                    "type": "string"
                },
                "version": {
                    "type": "string",
                    "pattern": "^\\d+\\.\\d+\\.\\d+$"
                },
                "description": {
                    "type": "string"
                }
            }
        },
        "templates": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "ref"
                ],
                "properties": {
                    "id": {
                        "type": "string",
                        "pattern": "^[a-z][a-z0-9-]*$"
                    },
                    "ref": {
                        "type": "string",
                        "description": "Relative path to template.yaml"
                    }
                }
            }
        },
        "legacyMapping": {
            "type": "object",
            "additionalProperties": {
                "type": "string"
            }
        }
    }
}